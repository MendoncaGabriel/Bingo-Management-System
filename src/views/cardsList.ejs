<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cartelas</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>
<body class="bg-gray-100">


    <section class="border border-red-500 grid grid-cols-6 ">
        <!-- navbar -->
        <div class="col-span-6">
            <%- include('./components/navbar.ejs') %> 
        </div>

        <!-- assidebar -->
        <div class="border border-blue-600 col-span-1 h-screen bg-gray-50">
            <%- include('./components/sidebar.ejs') %> 
        </div>

        <!-- screen -->
        <div class="border border-blue-600 col-span-5 h-screen relative">
            <section class="bg-white shadow-md p-10 m-auto max-w-screen-xl rounded-md">

                <h1 class="text-center text-2xl text-gray-600 font-semibold ">CARTELAS</h1>
    
    
                <div class=" p-4 mb-5 border-b">
                    <h2 class="text-gray-600">Filtros:</h2>
                    <div class="flex space-x-2 w-full">
                        <button class="border bg-white px-4 py-2 rounded-md block">Data</button>
                        <button class="border bg-white px-4 py-2 rounded-md block">A-Z</button>
                    </div>
                </div>
                
                <!-- Tabela de bingos -->
                <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">
                                    Titulo
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Categoria
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Bingos qtd.
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Cartela qtd.
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Padrão
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Editar
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Baixar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                    ARRAIÁ DA PARÓQUIA SANTA TEREZINHA
                                </th>
                                <td class="px-6 py-4">
                                    Igreja
                                </td>
                                <td class="px-6 py-4">
                                    4
                                </td>
                                <td class="px-6 py-4">
                                    5000
                                </td>
                                <td class="px-6 py-4">
                                    25/75
                                </td>
                                <td class="px-6 py-4">
                                    <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                        <img src="/icons/icons8-editar-100.png" class="w-6 " alt="">
                                    </a>
                                </td>
                                <td class="px-6 py-4">
                                    <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                        <img src="/icons/icons8-pdf-100.png" class="w-6 " alt="">
                                        
                                    </a>
                                </td>
                            </tr>
    
                        </tbody>
                    </table>
                </div>
    
    
    
    
            </section>
        </div>
    </section>
    
</body>
</html>
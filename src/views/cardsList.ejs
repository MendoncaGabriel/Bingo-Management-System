<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cartelas</title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>
<body class="bg-gray-100">

    <section class=" h-screen  ">
            
        <%- include('./components/navbar.ejs') %> 
            
        <!-- screen -->
        <div class=" border-blue-600 flex    bg-gray-50" style=" height: calc(100vh - 90px);">
            <%- include('./components/sidebar.ejs') %> 
            
            
            <section class="bg-white shadow-md p-10 m-auto max-w-screen-xl rounded-md flex-none">
    
                <h1 class="text-center text-2xl text-gray-600 font-semibold ">CARTELAS</h1>
    
                <!-- Filtros -->
                <div class=" p-4 mb-5 border-b">
                    <h2 class="text-gray-600">Filtros:</h2>
                    <div class="flex space-x-2 w-full">
                        <button class="border bg-white px-4 py-2 rounded-md block">Data</button>
                        <button class="border bg-white px-4 py-2 rounded-md block">A-Z</button>
                    </div>
                </div>
                
                <!-- Tabela de bingos -->
                <div class="relative overflow-x-auto shadow-md sm:rounded-lg max-h-[550px] overflow-auto border ">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-200 ">
                                <tr>
                                    <th scope="col" class="px-6 py-3">
                                        Titulo
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Categoria
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Bingos qtd.
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Cartela qtd.
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Padr√£o
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Editar
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Baixar
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Deletar
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="border border-red-600">
                    
                                <% cards.map(element => { %>
                                    <tr class="odd:bg-white   even:bg-gray-50  border-b hover:bg-green-100">
                                        <td title="<%= element.title %>" class="px-6 text-left py-4 font-medium text-gray-900 whitespace-nowrap   border border-gray-200 overflow-hidden ">
                                            <%= element.title %>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-left">
                                            <%= element.category %>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-center">
                                            <%= element.bingosForCards %>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-center">
                                            <%= element.NumberOfCards %>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-center">
                                            <%= element.bingoPattern %>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden">
                                            <a href="/editar-cartela?id=<%= element._id %>" class="font-medium text-blue-600  hover:underline m-auto block">
                                                <img src="/icons/icons8-editar-100.png" class="w-6" alt="">
                                            </a>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden ">
                                            <a href="/cartela/<%= element._id %>"  class="font-medium text-blue-600  hover:underline m-auto block">
                                                <img src="/icons/icons8-pdf-100.png" class="w-6" alt="">
                                            </a>
                                        </td>
                                        <td class="px-6 py-4 border border-gray-200 overflow-hidden ">
                                            <button onclick="deleteCard('<%= element._id %>')" class="font-medium text-blue-600  hover:underline m-auto block">
                                                <img src="/icons/icons8-remover-100.png" class="w-6" alt="">
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                    
                            </tbody>
                        </table>
                    </div>
                    
                </div>
    
    
    
    
            </section>
        </div>
    </section>
    
</body>
</html>


<script src="/js/page/card.js"></script>
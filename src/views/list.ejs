    <!-- Tabela de bingos -->
    <div class="relative   sm:rounded-lg max-h-[550px]  border ">
        
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="text-xs text-gray-50 uppercase bg-cinza ">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Titulo
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Categoria
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Bingos qtd.
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Cartela qtd.
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Padr√£o
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Editar
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Buildar PDF
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Download
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Deletar
                    </th>
                </tr>
            </thead>
            <tbody class="border border-red-600">
    
                <% cards.map(element => { %>
                    <tr class="odd:bg-white   even:bg-gray-50  border-b hover:bg-green-100">
                        <td title="<%= element.title %>" class="px-6 text-left py-4 font-medium text-gray-900 whitespace-nowrap   border border-gray-200 overflow-hidden ">
                            <%= element.title %>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-left">
                            <%= element.category %>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-center">
                            <%= element.bingosForCards %>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-center">
                            <%= element.NumberOfCards %>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden text-center">
                            <%= element.bingoPattern %>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden">
                            <a href="/editar-cartela?id=<%= element._id %>" class="font-medium text-blue-600  hover:underline m-auto block">
                                <img src="/icons/icons8-editar-100.png" class="w-6" alt="">
                            </a>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden ">
                            <a href="/cartela/<%= element._id %>" target="_blank"  class="font-medium text-blue-600  hover:underline m-auto block">
                                <img src="/icons/icons8-pdf-100.png" class="w-6" alt="">
                            </a>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden ">
                            <% if (typeof element.pdf != "undefined" && element.pdf) { %>                                     
                                <a href="/pdf/<%= element.pdf  %>"  class="font-medium text-blue-600  hover:underline m-auto block">
                                    Abrir
                                </a>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 border border-gray-200 overflow-hidden ">
                            <button onclick="deleteCard('<%= element._id %>')" class="font-medium text-blue-600  hover:underline m-auto block">
                                <img src="/icons/icons8-remover-100.png" class="w-6" alt="">
                            </button>
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>
    
        
    </div>



